{% for repo in odoo_other_modules | default([]) | sort %}
{{ repo.url }}:
{% if repo.branch is defined %}
    branch: {{ repo.branch }}
{% else %}
    branch: {{ odoo_version }}
{% endif %}
{% for modules in repo.modules | sort %}
    modules:
        - {{ modules }}
{% endfor %}
{% endfor %}
{% for repo in odoo_custom_modules_oca | default([]) | sort %}
https://github.com/OCA/{{ repo.repo }}.git:
{% if repo.branch is defined %}
    branch: {{ repo.branch }}
{% else %}
    branch: {{ odoo_version }}
{% endif %}
{% for modules in repo.modules | sort %}
    modules:
        - {{ modules }}
{% endfor %}
{% endfor %}
